{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>


    <div class="example-wrapper">
        <h2>Search</h2>
        <div>
            {% for c in categories %}
                <a href="{{ path('app_message_category', {'category': c.name, 'id': c.name } ) }}">{{ c.name }}</a>
            {% endfor %}
        </div>
        <div>
            {{ form_start(searchForm) }}
            {{ form_widget(searchForm.q) }}
            <button type="submit">Rechercher</button>
            {{ form_end(searchForm) }}

        </div>
        <div>
            {% for message in messages %}
                <div>
                    <div style="display: flex; gap: 10px;">
                        <p>{{ message.pseudo }}</p>
                        <p>{{ message.content }}</p>
                        <p>{{ message.category }}</p>
                        <a href="{{ path('app_message', {id: message.id, 'category': message.category}) }}">Modifier</a>
                        <a href="{{ path('app_message_delete', {index: message.category, id: message.id, category: message.category } ) }}">delete</a>


                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
