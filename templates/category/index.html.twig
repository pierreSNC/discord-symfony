{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div  class="form__category__container">
            {% for category in categories %}
                <div>
                    <p>{{ category.name }}</p>
                    <img src="{{ asset('uploads/channels/')~category.image }}" alt="test" width="100px  " height="auto">
                    <a href="{{ path('app_category_delete', {id: category.id} ) }}">delete</a>
                </div>

            {% endfor %}
        </div>
        <div>
            {{ form_start(form) }}
            <div class="form__category__form">
                    <div>
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div>
                        {{ form_widget(form.image) }}
                    </div>
            </div>
                <button type="submit">Enregistrer</button>
            {{ form_end(form) }}
        </div>

    </div>
    <div class="return__chat">
        <a href="{{ path('app_message') }}">Retour sur le site</a>
    </div>
{% endblock %}
